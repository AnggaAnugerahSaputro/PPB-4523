<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_height="match_parent"
    tools:context=".updateData"
    >

    <TextView
        android:layout_width="match_parent"
        android:text="Edit Data Buah"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:background="@color/blue"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
        <TextView
            android:layout_width="match_parent"
            android:text="No Buah      :"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/nobuah"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text="Nama Buah :"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/editbuah"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/tblsaveedit"
            android:layout_width="wrap_content"
            android:text="SAVE"
            android:layout_height="wrap_content"/>
        
            <Button
                android:id="@+id/tblviewlist"
                android:layout_width="wrap_content"
                android:layout_marginLeft="120dp"
                android:text="VIEW"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
    <EditText
        android:id="@+id/kodehasil"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/hasileditbuah"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>